<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvGroupName"
        tools:text="Group Name"
        android:layout_margin="@dimen/minimal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTypeSaber"
        tools:text="4 Device WALS"
        app:layout_constraintStart_toStartOf="@id/tvGroupName"
        app:layout_constraintTop_toBottomOf="@id/tvGroupName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/minimal_margin"
        android:layout_marginBottom="@dimen/minimal_margin"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvActionConnect"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/minimal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/tv_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivBtnPower"
        android:src="@drawable/ic_btn_power_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/minimal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/button_action_power_size"
        android:layout_height="@dimen/button_action_power_size" />


</androidx.constraintlayout.widget.ConstraintLayout>