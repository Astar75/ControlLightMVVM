<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    tools:context=".view.screen_ftp_control.FtpControlFragment">

    <FrameLayout
        android:id="@+id/containerTopControlPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_control_panel_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/topControlPanel"
            layout="@layout/include_top_control_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvColorPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:background="@drawable/drawable_color_preview_corners"
        android:gravity="center"
        android:padding="@dimen/default_margin"
        android:text="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerTopControlPanel" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/containerColorControl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintBottom_toTopOf="@id/tvSmoothMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvColorPreview"
        app:layout_constraintVertical_bias="0.468">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maximal_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tv_label_red"
                    android:textColor="#ffffff" />

                <SeekBar
                    android:id="@+id/sbRedColor"
                    style="@style/SeekBarLightness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:max="255" />

                <TextView
                    android:id="@+id/tvRedPreview"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="255"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maximal_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tv_label_green"
                    android:textColor="#ffffff" />

                <SeekBar
                    android:id="@+id/sbGreenColor"
                    style="@style/SeekBarLightness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:max="255" />

                <TextView
                    android:id="@+id/tvGreenPreview"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="255"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maximal_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tv_label_blue"
                    android:textColor="#ffffff" />

                <SeekBar
                    android:id="@+id/sbBlueColor"
                    style="@style/SeekBarLightness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:max="255" />

                <TextView
                    android:id="@+id/tvBluePreview"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="255"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maximal_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tv_label_saturation"
                    android:textColor="#ffffff" />

                <SeekBar
                    android:id="@+id/sbSaturationColor"
                    style="@style/SeekBarLightness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:max="255" />

                <TextView
                    android:id="@+id/tvSaturationPreview"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="255"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maximal_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="L:"
                    android:textColor="#ffffff" />

                <SeekBar
                    android:id="@+id/sbLightnessColor"
                    style="@style/SeekBarLightness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:max="100" />

                <TextView
                    android:id="@+id/tvLightnessPreview"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="255"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvSmoothMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maximal_margin"
        android:layout_marginBottom="@dimen/maximal_margin"
        android:text="Gradient:"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/viewButton_1"
        app:layout_constraintEnd_toStartOf="@id/tvSmooth"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSmooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smooth"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSmoothMode"
        app:layout_constraintEnd_toStartOf="@id/tvSharp"
        app:layout_constraintStart_toEndOf="@id/tvSmoothMode"
        app:layout_constraintTop_toTopOf="@+id/tvSmoothMode" />

    <TextView
        android:id="@+id/tvSharp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sharp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSmooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSmooth"
        app:layout_constraintTop_toTopOf="@+id/tvSmooth" />

    <View
        android:id="@+id/viewButton_1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/ic_btn_no_color"
        app:layout_constraintBottom_toTopOf="@id/containerBottomNavPanel"
        app:layout_constraintEnd_toStartOf="@+id/viewButton_2"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewButton_selector_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/drawable_cell_selector"
        app:layout_constraintBottom_toBottomOf="@id/viewButton_1"
        app:layout_constraintEnd_toEndOf="@id/viewButton_1"
        app:layout_constraintStart_toStartOf="@id/viewButton_1"
        app:layout_constraintTop_toTopOf="@id/viewButton_1" />

    <View
        android:id="@+id/viewButton_2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/ic_btn_no_color"
        app:layout_constraintBottom_toTopOf="@id/containerBottomNavPanel"
        app:layout_constraintEnd_toStartOf="@id/viewButton_3"
        app:layout_constraintStart_toEndOf="@id/viewButton_1" />

    <View
        android:id="@+id/viewButton_selector_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/drawable_cell_selector"
        app:layout_constraintBottom_toBottomOf="@id/viewButton_2"
        app:layout_constraintEnd_toEndOf="@id/viewButton_2"
        app:layout_constraintStart_toStartOf="@id/viewButton_2"
        app:layout_constraintTop_toTopOf="@id/viewButton_2" />

    <View
        android:id="@+id/viewButton_3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/ic_btn_no_color"
        app:layout_constraintBottom_toTopOf="@id/containerBottomNavPanel"
        app:layout_constraintEnd_toStartOf="@id/viewButton_4"
        app:layout_constraintStart_toEndOf="@id/viewButton_2" />

    <View
        android:id="@+id/viewButton_selector_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/drawable_cell_selector"
        app:layout_constraintBottom_toBottomOf="@id/viewButton_3"
        app:layout_constraintEnd_toEndOf="@id/viewButton_3"
        app:layout_constraintStart_toStartOf="@id/viewButton_3"
        app:layout_constraintTop_toTopOf="@id/viewButton_3" />

    <View
        android:id="@+id/viewButton_4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/ic_btn_no_color"
        app:layout_constraintBottom_toTopOf="@id/containerBottomNavPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewButton_3" />

    <View
        android:id="@+id/viewButton_selector_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/drawable_cell_selector"
        app:layout_constraintBottom_toBottomOf="@id/viewButton_4"
        app:layout_constraintEnd_toEndOf="@id/viewButton_4"
        app:layout_constraintStart_toStartOf="@id/viewButton_4"
        app:layout_constraintTop_toTopOf="@id/viewButton_4" />

    <FrameLayout
        android:id="@+id/containerBottomNavPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_panel_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/bottomNavPanel"
            layout="@layout/include_bottom_nav_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>