<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/containerTitleDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_control_panel_icon_size"
        android:background="@color/top_control_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/dialog_title_text_color"
            android:textSize="@dimen/dialog_title_text_size" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/containerColorPicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerTitleDialog"
        app:layout_constraintBottom_toTopOf="@id/containerButtonAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/colorPicker"
            android:layout_margin="@dimen/default_margin"
            android:layout_width="300dp"
            android:layout_height="300dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/containerButtonAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerColorPicker"
        android:layout_width="0dp"
        android:layout_height="@dimen/top_control_panel_icon_size">

        <Button
            android:id="@+id/btnSelect"
            style="@style/ButtonNavStyle"
            android:text="@string/button_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>