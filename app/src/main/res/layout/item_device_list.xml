<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNameDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Name Device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAddressDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Address device"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameDevice" />

    <TextView
        android:id="@+id/tvConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddressDevice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNameDevice" />

    <ImageView
        android:id="@+id/ivBtnPower"
        android:layout_width="@dimen/button_action_power_size"
        android:layout_height="@dimen/button_action_power_size"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddressDevice"
        app:layout_constraintEnd_toEndOf="@+id/tvConnect"
        app:layout_constraintStart_toStartOf="@+id/tvConnect"
        app:layout_constraintTop_toTopOf="@+id/tvNameDevice"
        app:srcCompat="@drawable/ic_btn_power_off" />

    <View
        android:id="@+id/viewColor"
        android:layout_width="51dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:background="#FF5E5E"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddressDevice"
        app:layout_constraintEnd_toStartOf="@+id/ivBattery"
        app:layout_constraintTop_toTopOf="@+id/tvNameDevice"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddressDevice"
        app:layout_constraintEnd_toStartOf="@+id/ivBtnPower"
        app:layout_constraintTop_toTopOf="@+id/tvNameDevice"
        app:srcCompat="@drawable/ic_battery_value" />

</androidx.constraintlayout.widget.ConstraintLayout>