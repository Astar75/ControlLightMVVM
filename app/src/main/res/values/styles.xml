<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonNavStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/button_nav_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/button_color</item>

    </style>

    <style name="ButtonActionStyle">
        <item name="android:layout_width">@dimen/button_action_size</item>
        <item name="android:layout_height">@dimen/button_action_size</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="NoDataContentTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/no_data_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>